package desafios;

import java.util.Scanner;

//import javax.swing.JOptionPane;

public class DesafioWhile {

	public static void main(String[] args) {

		Scanner entrada = new Scanner(System.in);

//		String entrada = JOptionPane.showInputDialog("Digite uma nota");
//		String saida = JOptionPane.showInternalConfirmDialog("yes","No");

		double notafinal = Double.parseDouble(entrada);

		String saida = "sair";
		double contador = 0;
		double total = 0;

		while (!saida.equalsIgnoreCase(saida)) {
			if (notafinal >= 0 && notafinal <= 10) {
				total += notafinal;
				contador++;
			} else {
				System.out.println("A nota digitada não é válida!");
			}
		}

	}
}
